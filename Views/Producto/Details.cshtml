@model Producto
@{
    ViewData["Title"] = "Detalles del producto";
}
<h1>@ViewData["Title"]</h1>
<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-control">Descripción</label>
        <input input asp-for="Descripcion" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input input asp-for="Cantidad" class="form-control" disabled>
    </div>
    <div class="row col 6">
        <div class="col-6 col-md-6">
            <a asp-action="Index" class="btn btn-outline-primary">Regresar</a>
        </div>
    </div>
</form>

<p>En esta pagina se muestran el detalle de los productos</p>

